{{!-- when we pass in post we pass in the all the properties of the object, so we must update variables to not include post like below! --}}
<div class="comments">
    {{!-- # start --}}
    {{!-- must be accessed by 'this' instead of 'comments' because arrays don't have named properties like objects do --}}
    {{#each this}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{ format_date created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{!-- / stop --}}
    {{/each}}
</div>